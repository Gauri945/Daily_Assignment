import java.util.*;

class Solution {
    public int findKthLargest(int[] nums, int k) {
        // Min-Heap
        PriorityQueue<Integer> minHeap = new PriorityQueue<>();

        for (int num : nums) {
            minHeap.add(num); // push element
            if (minHeap.size() > k) {
                minHeap.poll(); 
            }
        }

        return minHeap.peek(); // top of min-heap is kth largest ele
    }
}
